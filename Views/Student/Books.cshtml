@model LibraryManagement5.Context.Book

@{
    ViewBag.Title = "Books";
    var list = new List<string>() { "Available", "Not Available" };
    ViewBag.list = list;
}

<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("AddBook", "Student", FormMethod.Post))
{
    <br />
    <h4 style="align-content:end"> Welcome @ViewData["username"]! </h4>
    <br />
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.id)
            @Html.HiddenFor(x => x.UsernameID)

            <label>Book Name</label>
            @Html.ValidationMessageFor(x => x.BookName, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.BookName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Author</label>
            @Html.ValidationMessageFor(x => x.Author, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Quantity</label>
            @Html.ValidationMessageFor(x => x.Quantity, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Status</label>
            @Html.ValidationMessageFor(x => x.BookStatus, "", new { @class = "error" })
            @Html.DropDownListFor(x => x.BookStatus, new SelectList(ViewBag.list), new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Insert</button>
            <button type="reset" class="btn btn-danger">Cancel</button>
        </div>
    </div>
}

